{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
          "settings": {
            "python.defaultInterpreterPath": "/workspaces/.venv/bin/python"
          },
          "extensions": [
            "ms-python.python",
            "hbenl.vscode-test-explorer",
            "ms-toolsai.jupyter",
            "github.copilot"
          ]
        }
    },
    "postCreateCommand": "./scripts/update-env.sh ${containerWorkspaceFolder}"
}
